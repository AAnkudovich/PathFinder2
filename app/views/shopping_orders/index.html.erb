<p id="notice"><%= notice %></p>

<h1>Listing Shopping Orders</h1>

<table>
  <thead>
    <tr>
      <th>Customer</th>
      <th>Paymethod</th>
      <th>Total</th>
      <th>Currentstatus</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @shopping_orders.each do |shopping_order| %>
      <tr>
        <td><%= shopping_order.customer_id %></td>
        <td><%= shopping_order.payMethod %></td>
        <td><%= shopping_order.total %></td>
        <td><%= shopping_order.currentStatus %></td>
        <td><%= link_to 'Show', shopping_order %></td>
        <td><%= link_to 'Edit', edit_shopping_order_path(shopping_order) %></td>
        <td><%= link_to 'Destroy', shopping_order, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

