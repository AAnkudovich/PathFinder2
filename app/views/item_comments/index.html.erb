<p id="notice"><%= notice %></p>

<h1>Listing Item Comments</h1>

<table>
  <thead>
    <tr>
      <th>Userid</th>
      <th>Itemid</th>
      <th>Rating</th>
      <th>Message</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @item_comments.each do |item_comment| %>
      <tr>
        <td><%= item_comment.userID %></td>
        <td><%= item_comment.itemID %></td>
        <td><%= item_comment.rating %></td>
        <td><%= item_comment.message %></td>
        <td><%= link_to 'Show', item_comment %></td>
        <td><%= link_to 'Edit', edit_item_comment_path(item_comment) %></td>
        <td><%= link_to 'Destroy', item_comment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

