
<h1>Listing Lineitems</h1>

<table>
  <thead>
    <tr>
      <th>Item</th>
      <th>Shopping order</th>
      <th>Cart</th>
      <th>Quantity</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @lineitems.each do |lineitem| %>
      <tr>
        <td><%= lineitem.item_id %></td>
        <td><%= lineitem.shopping_order_id %></td>
        <td><%= lineitem.cart_id %></td>
        <td><%= lineitem.quantity %></td>
        <td><%= link_to 'Show', lineitem %></td>
        <td><%= link_to 'Edit', edit_lineitem_path(lineitem) %></td>
        <td><%= link_to 'Destroy', lineitem, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

