<p id="notice"><%= notice %></p>

<h1>Listing Items</h1>

<table>
  <thead>
    <tr>
      <th>Image</th>
      <th>Title</th>
      <th>Description</th>
      <th>Price</th>
      <th>Quantity</th>
      <th>Locationid</th>
      <th>Boxid</th>
      <th>Fragile</th>
      <th>Weight</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @items.each do |item| %>
      <tr>
        <td><img src="<%= item.image %>" style="width:20px; heigth: 20px;"></td>
        <td><%= item.title %></td>
        <td><%= item.description %></td>
        <td><%= item.price %></td>
        <td><%= item.quantity %></td>
        <td><%= item.locationId %></td>
        <td><%= item.boxId %></td>
        <td><%= item.fragile %></td>
        <td><%= item.weight %></td>
        <td><%= link_to 'Show', item %></td>
        <td><%= link_to 'Edit', edit_item_path(item) %></td>
        <td><%= link_to 'Destroy', item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <td><%= button_to 'Add to Cart', lineitems_path(item_id: item),:class => "btn btn-success pull-right" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

