<p id="notice"><%= notice %></p>

<h1>Assign to vehicle which will perform delivery</h1>

<table>
  <thead>
    <tr>
      <th>Regplate</th>
      <th>Current Load</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @vans.each do |van| %>
      <tr>
        <td><%= van.regPlate %></td>
        <td><% @vans_shipping_manifests = ShippingManifest.where(vanID: van.id).where(shippingstatus: ["Packed ready to ship","Shipping"]) 
        counter=0
          @vans_shipping_manifests.each do |shipping_manifest| 
            counter = counter+1
          end
        %>
        <%= counter%> Orders</td>

        <td>
        <%= form_for(van) do |f| %>
          <%= f.hidden_field :regPlate, :value =>  van.regPlate %>
            
              <%= f.submit "Fill the van and Proceed to shipping" , :class => "btn btn-success packing-buttonÃŸ"  %>
            
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

