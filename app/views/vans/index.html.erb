
<h1>Listing Vans</h1>

<table>
  <thead>
    <tr>
      <th>Regplate</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @vans.each do |van| %>

      <tr>
        <td><%= van.regPlate %></td>
        <td><% @vans_shipping_manifests = ShippingManifest.where(vanID: van.id).where(shippingstatus: ["Packed ready to ship","Shipping"]) 
        counter=0
          @vans_shipping_manifests.each do |shipping_manifest| 
            counter = counter+1
          end
        %>
        <%= counter%> Orders still in the van</td>
        <td><%= link_to 'Show', van %></td>

        
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<%if current_user.is_admin? %>
<%= link_to 'New Van', new_van_path %>
<%end%>
